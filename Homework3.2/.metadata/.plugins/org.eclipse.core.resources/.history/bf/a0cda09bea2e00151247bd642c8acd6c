import java.util.Scanner;
public class Zadacha2 {

	public static void main(String[] args) {
Scanner input = new Scanner(System.in);

double num;
double sum=0;

	for (;;){
		num=input.nextDouble();
		sum+=num;
		if(num == 0){
			break;
		}
		System.out.println("The sum is :" + sum);
			
		}
	
		
		} 
	
		}
			
			
			
		
		 
		
	

